#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh
    
    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Vagrant stop' {
    touch Vagrantfile

    run stop
    
    assert $state equals 0
    assert "$output" same_as 'vagrant halt'
}

@test 'Vagrant stop (with arguments)' {
    touch Vagrantfile

    run stop mysql -f
    
    assert $state equals 0
    assert "$output" same_as 'vagrant halt mysql -f'
}
