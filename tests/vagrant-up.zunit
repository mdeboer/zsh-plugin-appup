#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh

    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Vagrant up' {
    touch Vagrantfile

    run up

    assert $state equals 0
    assert "$output" same_as 'vagrant up'
}

@test 'Vagrant up (with arguments)' {
    touch Vagrantfile

    run up mysql --provision

    assert $state equals 0
    assert "$output" same_as 'vagrant up mysql --provision'
}
