#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh

    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Restart (without any files)' {
    run restart

    assert $state equals 255
    assert "$output" is_empty
}

@test 'Restart (with both docker compose file and vagrant file)' {
    touch compose.yaml
    touch Vagrantfile

    run restart

    assert $state equals 0
    assert "$output" same_as 'docker compose restart'
}
