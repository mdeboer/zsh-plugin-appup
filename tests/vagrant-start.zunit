#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh
    
    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Vagrant start' {
    touch Vagrantfile

    run start
    
    assert $state equals 0
    assert "$output" same_as 'vagrant up'
}

@test 'Vagrant start (with arguments)' {
    touch Vagrantfile

    run start mysql --provision
    
    assert $state equals 0
    assert "$output" same_as 'vagrant up mysql --provision'
}
