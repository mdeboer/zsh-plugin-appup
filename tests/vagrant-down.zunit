#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh
    
    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Vagrant down' {
    touch Vagrantfile

    run down
    
    assert $state equals 0
    assert "$output" same_as 'vagrant destroy'
}

@test 'Vagrant down (with arguments)' {
    touch Vagrantfile

    run down mysql -f
    
    assert $state equals 0
    assert "$output" same_as 'vagrant destroy mysql -f'
}
