#!/usr/bin/env zunit

@setup {
    load ../appup.plugin.zsh
    
    _tmp_setup
}

@teardown {
    _tmp_teardown
}

@test 'Docker compose restart' {
    local test_files=('compose.yaml' 'compose.yml' 'docker-compose.yaml' 'docker-compose.yml')

    for f in $test_files; do
        _tmp_setup
        touch "$f"

        run restart

        assert $state equals 0
        assert "$output" same_as 'docker compose restart'
    done
}

@test 'Docker compose restart (with env files and arguments)' {
    touch compose.yaml

    zstyle ':omz:plugins:appup:docker' env-files .env .env.foo .env.local

    touch .env
    touch .env.local

    run restart mysql -v

    assert $state equals 0
    assert "$output" same_as 'docker compose restart mysql -v'
}
